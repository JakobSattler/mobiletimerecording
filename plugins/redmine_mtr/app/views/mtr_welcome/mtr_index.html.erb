<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'bootstrap.css', :plugin => 'redmine_mtr' %>
    <%= stylesheet_link_tag 'bootstrap.min.css', :plugin => 'redmine_mtr' %>
    <%= stylesheet_link_tag 'bootstrap-theme.css', :plugin => 'redmine_mtr' %>
    <%= stylesheet_link_tag 'bootstrap-theme.min.css', :plugin => 'redmine_mtr' %>
    <%= stylesheet_link_tag 'styles.css', :plugin => 'redmine_mtr' %>
    <%= stylesheet_link_tag 'menu.css', :plugin => 'redmine_mtr' %>

    <%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" %>
<% end %>

<div id="login-form" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
    <!--The Hamburger Button in the Header-->
    <ul id="menu">
      <li>
        <a title="Home" href="/mtr">Home</a>
      </li>
      <li>
        <%= form_tag(mtr_signout_path) do %>
          <a href="#" title="Abmelden" onClick="this.parentNode.submit()">Abmelden</a>
        <% end %>
      </li>
    </ul>

    <div id="page">
      <header>
        <h1>My New Site</h1>
        <a href="#" id="toggle-menu"><span class="glyphicon glyphicon-menu-hamburger"></span></a>
      </header>

    </div>
</div>

<script src="/plugin_assets/redmine_mtr/javascripts/menu.js" type="text/javascript"></script>
<script src="/plugin_assets/redmine_mtr/javascripts/jquery-2.1.0.min.js" type="text/javascript"></script>
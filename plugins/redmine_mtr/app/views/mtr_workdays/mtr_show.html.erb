<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'bootstrap.css', :plugin => 'redmine_mtr' %>
    <%= stylesheet_link_tag 'bootstrap.min.css', :plugin => 'redmine_mtr' %>
    <%= stylesheet_link_tag 'bootstrap-theme.css', :plugin => 'redmine_mtr' %>
    <%= stylesheet_link_tag 'bootstrap-theme.min.css', :plugin => 'redmine_mtr' %>
    <%= stylesheet_link_tag 'styles.css', :plugin => 'redmine_mtr' %>
    <%= stylesheet_link_tag 'menu.css', :plugin => 'redmine_mtr' %>

    <%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" %>
    <%= javascript_include_tag "worktime.js", :plugin => 'redmine_mtr' %>
    <%= javascript_include_tag "zz5_angular.js", :plugin => 'redmine_zz5' %>

    <meta name="viewport" content="width=20, initial-scale=1">
<% end %>
<div class="modal show" aria-hidden="true">
  <form id="worktime_form" name="date_form" method="get">
  <center>

    <!-- dateform -->

      <div style="padding-bottom: 3px">
      <button type="button" class="btn btn-default" aria-label="Center Align" value="dec" onClick="changeDate(this)">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      </button>
        <%= label_tag 'date_label', params[:date_label], :id => 'date_label', :name => 'date_label'%>
        <%= hidden_field_tag 'date', params[:date], :id => 'date', :name => 'date'%>
        <%= hidden_field_tag 'year', params[:year], :id => 'year', :name => 'year'%>
        <%= hidden_field_tag 'week', params[:week], :id => 'week', :name => 'week'%>
        <%= hidden_field_tag 'month', params[:month], :id => 'month', :name => 'month'%>
        <%= hidden_field_tag 'day', params[:day], :id => 'day', :name => 'day'%>
      <button type="button" class="btn btn-default" aria-label="Left Align" value="inc" onClick="changeDate(this)">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      </button>
      </div>


  </center>
  <div class="work-absences-container">

    <!-- begin field -->
    <div class="col-xs-4 form-group">
      <label class="col-xs-12"><%=l(:mtr_work_start) %></label>
      <%= text_field_tag 'begin', params[:begin], :class => 'col-xs-12', :type => 'time' %>
    </div>
    <!-- end field -->
    <div class="col-xs-4 form-group">
      <label class="col-xs-12"><%=l(:mtr_work_end)%></label>
      <%= text_field_tag 'end', params[:end], :class => 'col-xs-12', :type => 'time' %>
    </div>
    <!-- break field -->
    <div class="col-xs-4 form-group">
      <label class="col-xs-12"><%=l(:mtr_break_duration) %></label>
      <%= text_field_tag 'break', params[:break], :class => 'col-xs-12', :type => 'time' %>
    </div>
  </div>
  </form>
  <script>
      var data = {"year": <%= @year %>, "week": <%= @week %>, "day": <%= @day %>}


  </script>
</div>
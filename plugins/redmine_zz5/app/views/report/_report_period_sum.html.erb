<tr class="total-sum">
    <td class="day"><%= t("message.zz5_report_work_period_sum") %></td>

    <%
        diff_time = work_period_sum[Zz5Constants::ACTUAL_TIME] - work_period_sum[Zz5Constants::TARGET_TIME] + time_carry
        diff_time_no_carry = work_period_sum[Zz5Constants::ACTUAL_TIME] - work_period_sum[Zz5Constants::TARGET_TIME]
    -%>

    <td class="report-hours-container">
        <div class="hours"><div class="target-sum"><%= convert_seconds_to_hours_and_minutes(work_period_sum[Zz5Constants::TARGET_TIME]) %>
        </div></div>
    </td>

    <td class="report-hours-container">
        <div class="hours"><div class="actual-sum"><%= convert_seconds_to_hours_and_minutes(work_period_sum[Zz5Constants::ACTUAL_TIME]) %>
        </div></div>
    </td>

    <td class="total-hours-container">
        <div class="total-hours"><span class="<%= (diff_time_no_carry < 0) ? "negative" : "positive"%>"><%= convert_seconds_to_hours_and_minutes(diff_time_no_carry) %></span></div>
    </td>

    <td class="general-hours-container">
        <div class="comp-hours"><%= convert_seconds_to_hours_and_minutes(work_period_sum[Zz5Constants::ABS_COMP_TIME]) %>
        </div>
    </td>

    <td class="report-hours-container">
        <div class="vacation-days">
            <% if !work_period_sum[Zz5Constants::ABS_VAC_DAY].nil? %>
                <%= work_period_sum[Zz5Constants::ABS_VAC_DAY].round(2) %>
            <% else %>
                <%= "0.0" %>
            <% end %>
        </div>
    </td>

    <td class="general-hours-container">
        <div class="sick-hours"><%= convert_seconds_to_hours_and_minutes(work_period_sum[Zz5Constants::ABS_SICK]) %>
        </div>
    </td>

    <td class="general-hours-container">
        <div class="special-vacation-hours"><%= convert_seconds_to_hours_and_minutes(work_period_sum[Zz5Constants::ABS_SPECIAL_VAC]) %>
        </div>
    </td>

    <td class="general-hours-container">
        <div class="care-hours"><%= convert_seconds_to_hours_and_minutes(work_period_sum[Zz5Constants::ABS_CARE]) %>
        </div>
    </td>

    <td class="total-hours-container">
        <div class="total-hours"><span class="<%= (diff_time < 0) ? "negative" : "positive"%>"><%= convert_seconds_to_hours_and_minutes(diff_time) %></span></div>
    </td>
</tr>
